" Color Scheme
syntax on
colorscheme nord

" Identation
set smartindent
set expandtab
set backspace=2
set tabstop=2
set softtabstop=2
set shiftwidth=2

set showmatch
set number
set ruler
set rulerformat=%l/%L,\ %c\ (%p%%)
set hlsearch
set autoread
set t_Co=256
set ignorecase
set smartcase
set mouse=a
set nomodeline
